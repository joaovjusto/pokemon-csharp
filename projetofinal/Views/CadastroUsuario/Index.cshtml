
@{
    ViewData["Title"] = "View";
}

    <body>
        <div class="row">
            <div class="col-3">
                <div class="limiter">
                    <div class="container-login100">
                        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">

                            <span class="login100-form-title p-b-33">
                                Criar uma conta
                            </span>

                            <form method="post" asp-area="" asp-controller="CadastroUsuario" asp-action="realizarLogin">
                                <label for="userName">Insira o nome de usuário:</label>
                                <input type="text" id="userName" name="userName" />

                                <label for="userName">Insira a senha:</label>
                                <input type="password" id="password" name="password" />

                                <label for="userName">Insira a Idade:</label>
                                <input type="text" id="idade" name="idade" />

                                <label for="userName">Insira o nome:</label>
                                <input type="text" id="nome" name="nome" />
                                <input type="submit" value="Cadastrar" />
                            </form>

                            <div class="text-center">
                                <span class="txt1">
                                    Volte ao login clicando 
                                </span>

                                <a class="txt2 hov1" asp-area="" asp-controller="Login" asp-action="Index">
                                    aqui
                                </a>
                            </div>
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

